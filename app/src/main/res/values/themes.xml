<resources>
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <!-- Screen theme -->

    <style name="Theme.CountersCreate" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="Theme.CountersMain" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <!-- Views theme -->
    <style name="Theme.ButtonTheme" parent="Theme.CountersNormal">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:radius">18dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FlatButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:radius">18dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.ProgressLoaderTheme" parent="Theme.CountersNormal">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SearchField" parent="Theme.CountersNormal">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Text.SmallBold" parent="Theme.CountersNormal">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>